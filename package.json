{
  "name": "ts-monorepo-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build --workspaces --if-present",
    "start:package-a": "sh -c 'npm --prefix packages/package-a run start > ./packages/package-a/logs/package-a-$(date +\"%Y-%m-%d_%H-%M-%S\").log 2>&1'",
    "start:package-b": "sh -c 'npm --prefix packages/package-b run start > ./packages/package-b/logs/package-b-$(date +\"%Y-%m-%d_%H-%M-%S\").log 2>&1'",
    "start": "concurrently \"npm run start:package-a\" \"npm run start:package-b\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lherlein/typescript-workspace-template.git"
  },
  "keywords": [],
  "workspaces": [
    "packages/*"
  ],
  "author": "Luca Herlein",
  "license": "ISC",
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "concurrently": "^6.3.0"
  },
  "bugs": {
    "url": "https://github.com/lherlein/typescript-workspace-template/issues"
  },
  "homepage": "https://github.com/lherlein/typescript-workspace-template#readme"
}
